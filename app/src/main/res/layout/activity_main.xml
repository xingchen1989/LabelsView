<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.xingchen.labels.view.LabelsView
        android:id="@+id/labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelBackground="@drawable/label_bg"
        app:labelTextColor="#785643"
        app:labelTextMinHeight="100dp"
        app:labelTextMinWidth="200dp"
        app:labelTextSize="16sp"
        app:lineMargin="10dp"
        app:maxLines="2"
        app:selectType="SINGLE_IRREVOCABLY"
        app:wordMargin="20dp" />
</LinearLayout>